<script>
    var mySong=document.getElementById("mySong");
    var icon=document.getElementById("icon");
    icon.onclick=function()
    {
        if(mySong.paused)
        {
        mySong.play();
        icon.src="https://png.pngtree.com/png-clipart/20190516/original/pngtree-pause-vector-icon-png-image_3791321.jpg"
        }
        else{
            mySong.pause();
            icon.src="http://clipart-library.com/images/8czn5zKKi.png"
        }
    }
</script>
